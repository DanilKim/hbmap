{
    "name": "HBMap_UNet_Multitask",
    "n_gpu": 4,

    "arch": {
        "type": "UNet_CNet",
        "args": {
            "n_channels": 3,
            "n_classes": 5
        }
    },
    "data_loader": {
        "type": "HBMapDataLoader",
        "args":{
            "images_dir": "/data/train_images",
            "masks_dir": "/data/train_masks",
            "split_file": "/data/train_cls.txt",
            "shuffle": true,
            "augment": true,
            "batch_size": 8,
            "image_size": 1024,
            "num_workers": 4
        }
    },
    "valid_data_loader": {
        "type": "HBMapDataLoader",
        "args":{
            "images_dir": "/data/train_images",
            "masks_dir": "/data/train_masks",
            "split_file": "/data/val_cls.txt",
            "shuffle": false,
            "augment": false,
            "batch_size": 1,
            "image_size": 1024,
            "num_workers": 2
        }
    },
    "seg_optimizer": {
        "type": "RMSprop",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1e-8,
            "momentum": 0.9
        }
    },
    "cls_optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1e-8
        }
    },
    "cls_loss": "ce_loss",
    "seg_loss": "ce_with_dice_loss",
    "cls_metrics": [
        "accuracy",
        "f1_score"
    ],
    "seg_metrics": [
        "dice_score"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "max",
            "patience": 2
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
