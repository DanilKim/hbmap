{
    "name": "HBMap",
    "n_gpu": 1,

    "arch": {
        "type": "UNet",
        "args": {
            "n_channel": 3,
            "n_classes": 2
        }
    },
    "data_loader": {
        "type": "HBMapDataLoader",
        "args":{
            "images_dir": "/data/train_images",
            "masks_dir": "/data/train_masks",
            "batch_size": 4,
            "image_size": 512,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
